#!/bin/sh

killall swaybg

# Environment setup
source $HOME/.config/river/env/preflight.sh

# Core configuration
source $HOME/.config/river/config/display.sh
source $HOME/.config/river/config/input.sh
source $HOME/.config/river/config/appearance.sh

# Functional modules
source $HOME/.config/river/modules/desktop-services.sh
source $HOME/.config/river/modules/layout.sh
source $HOME/.config/river/modules/keybindings.sh
source $HOME/.config/river/modules/window-rules.sh

