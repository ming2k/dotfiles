# Take a look at the mako manpage with the command:
#   man 5 mako
# To view all configuration options.

# Font - gruvbox aesthetic with distinct title/content sizes
font=Cantarell 11
format=<b><big>%s</big></b> <i>from</i> <b><i>%a</i></b>\n%b
sort=-time
output=DP-2
layer=overlay
anchor=top-center

# Gruvbox dark color scheme
background-color=#282828
text-color=#ebdbb2
width=280
height=100
margin=8
padding=6,12
border-size=2
border-radius=2
border-color=#504945
icons=1
max-icon-size=48
default-timeout=5000
ignore-timeout=1

# Progress bar - gruvbox blue
progress-color=#83a598

# Normal notifications - gruvbox neutral
[urgency=normal]
border-color=#504945
background-color=#282828
on-notify=exec /home/ming/.config/mako/play-notification.sh normal

# Warning notifications - gruvbox orange
[urgency=high]
border-color=#fe8019
background-color=#282828
text-color=#fe8019
default-timeout=8000
on-notify=exec /home/ming/.config/mako/play-notification.sh high

# Critical notifications - gruvbox red
[urgency=critical]
border-color=#fb4934
background-color=#282828
text-color=#fb4934
default-timeout=0
on-notify=exec /home/ming/.config/mako/play-notification.sh critical

# Application-specific styling
[app-name=lightcord]
border-color=#83a598
background-color=#3c3836

# Log notifications - gruvbox muted gray
[summary~="log-.*"]
border-color=#665c54
text-color=#928374

# Hide specific notification patterns
[app-name=lightcord summary~="(.*(^| )orz|ORZ|sto|STO|otl|OTL( |$).*)"]
invisible=1

# Battery notifications - gruvbox yellow/orange
[app-name=battery]
border-color=#fabd2f

[app-name=battery urgency=critical]
border-color=#fb4934

# Network notifications - gruvbox aqua
[app-name=NetworkManager]
border-color=#8ec07c

[app-name=NetworkManager summary~=".*disconnected.*"]
border-color=#fe8019

# Volume notifications - gruvbox purple
[app-name=pulseaudio]
border-color=#d3869b

# System notifications - gruvbox gray
[app-name=systemd]
border-color=#928374
